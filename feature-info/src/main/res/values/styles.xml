<resources>

    <style name="Gamedge.GameInfo"/>

    <style name="Gamedge.GameInfo.Header"/>

    <style name="Gamedge.GameInfo.Header.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/game_header_title_margin_start</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/game_header_title_text_color</item>
        <item name="android:textSize">@dimen/game_header_title_text_size</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

    <style name="Gamedge.GameInfo.Header.InfoView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/game_header_info_view_margin_bottom</item>
        <item name="layout_constraintTop_toBottomOf">@id/bottomBarrier</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.25</item>
        <item name="infoView_iconSize">@dimen/game_header_info_view_icon_size</item>
        <item name="infoView_iconColor">@color/game_header_info_view_icon_color</item>
        <item name="infoView_titleTextSize">@dimen/game_header_info_view_title_text_size</item>
        <item name="infoView_titleTextColor">@color/game_header_info_view_title_color</item>
    </style>

    <style name="Gamedge.GameInfo.Details"/>

    <style name="Gamedge.GameInfo.Details.CategoryTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/game_details_category_title_margin_top</item>
        <item name="android:textColor">@color/game_details_title_text_color</item>
        <item name="android:textSize">@dimen/game_details_category_title_text_size</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="Gamedge.GameInfo.Details.CategoryValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/game_details_category_value_margin_top</item>
        <item name="android:textSize">@dimen/game_details_category_value_text_size</item>
        <item name="android:textColor">@color/game_details_category_title_text_color</item>
        <item name="android:lineSpacingExtra">@dimen/game_details_category_value_line_spacing_extra</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="Gamedge.GameInfo.Links"/>

    <style name="Gamedge.GameInfo.Links.ChipFlow"/>

    <style name="Gamedge.GameInfo.Links.ChipFlow.TextAppearance">
        <item name="android:textColor">@color/game_links_chip_content_color</item>
        <item name="android:textSize">@dimen/game_links_chip_text_size</item>
    </style>

    <style name="Gamedge.GameInfo.Companies"/>

    <style name="Gamedge.GameInfo.Companies.InfoLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/game_company_info_label_background_color</item>
        <item name="android:paddingStart">@dimen/game_company_label_padding</item>
        <item name="android:paddingEnd">@dimen/game_company_label_padding</item>
        <item name="android:textSize">@dimen/game_company_label_text_size</item>
        <item name="android:textColor">@color/game_company_info_label_text_color</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>