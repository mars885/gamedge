<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.FrameLayout">

    <FrameLayout
        android:id="@+id/backBtnContainer"
        android:layout_width="@dimen/toolbar_button_container_size"
        android:layout_height="@dimen/toolbar_button_container_size"
        android:layout_gravity="start|center_vertical">

        <ImageView
            android:id="@+id/backBtnIv"
            android:layout_width="@dimen/toolbar_button_icon_size"
            android:layout_height="@dimen/toolbar_button_icon_size"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/toolbar_button_icon_padding"
            app:srcCompat="@drawable/arrow_left"
            app:tint="@color/toolbar_button_icon_color"/>

    </FrameLayout>

    <EditText
        android:id="@+id/queryInputEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:gravity="center_vertical"
        android:textSize="@dimen/search_toolbar_query_input_text_size"
        android:fontFamily="@string/text_font_family_medium"
        android:minLines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionSearch|flagNoExtractUi"
        android:textColorHint="@color/toolbar_title_text_color"
        android:textColor="@color/toolbar_title_text_color"
        tools:layout_marginStart="72dp"
        tools:layout_marginEnd="72dp"/>

    <FrameLayout
        android:id="@+id/clearBtnContainer"
        android:layout_width="@dimen/toolbar_button_container_size"
        android:layout_height="@dimen/toolbar_button_container_size"
        android:layout_gravity="end|center_vertical">

        <ImageView
            android:id="@+id/clearBtnIv"
            android:layout_width="@dimen/toolbar_button_icon_size"
            android:layout_height="@dimen/toolbar_button_icon_size"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/toolbar_button_icon_padding"
            app:srcCompat="@drawable/close"
            app:tint="@color/toolbar_button_icon_color"/>

    </FrameLayout>

</merge>